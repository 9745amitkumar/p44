<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@color/grey"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="40pt"
        tools:ignore="SpeakableTextPresentCheck" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buAC"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/lavender"
                android:onClick="acEvent"
                android:text="AC"
                android:textColor="#BF360C" />

            <Button
                android:id="@+id/bubad"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/lavender"
                android:onClick="numberEvent"
                android:text="+/-"
                android:textColor="#BF360C" />

            <Button
                android:id="@+id/budiv"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/lavender"
                android:onClick="operatorEvent"
                android:text="/"
                android:textColor="#BF360C" />

            <Button
                android:id="@+id/budot"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/purple_700"
                android:onClick="numberEvent"
                android:text="." />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/lavender"
                android:onClick="numberEvent"
                android:text="7"
                android:textColor="#BF360C" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/lavender"
                android:onClick="numberEvent"
                android:text="8"
                android:textColor="#BF360C" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/lavender"
                android:onClick="numberEvent"
                android:text="9"
                android:textColor="#BF360C" />

            <Button
                android:id="@+id/bumod"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/purple_700"
                android:onClick="percentageEvent"
                android:text="%" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/lavender"
                android:onClick="numberEvent"
                android:text="4"
                android:textColor="#BF360C" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/lavender"
                android:onClick="numberEvent"
                android:text="5"
                android:textColor="#BF360C" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/lavender"
                android:onClick="numberEvent"
                android:text="6"
                android:textColor="#BF360C" />

            <Button
                android:id="@+id/bumul"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/purple_700"
                android:onClick="operatorEvent"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/lavender"
                android:onClick="numberEvent"
                android:text="1"
                android:textColor="#BF360C" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/lavender"
                android:onClick="numberEvent"
                android:text="2"
                android:textColor="#BF360C" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/lavender"
                android:onClick="numberEvent"
                android:text="3"
                android:textColor="#BF360C" />

            <Button
                android:id="@+id/bumin"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/purple_700"
                android:onClick="operatorEvent"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu0"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="2"
                android:background="@color/lavender"
                android:onClick="numberEvent"
                android:text="0"
                android:textColor="#BF360C" />

            <Button
                android:id="@+id/buplus"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="2"
                android:background="@color/lavender"
                android:onClick="operatorEvent"
                android:text="+"
                android:textColor="#BF360C" />

            <Button
                android:id="@+id/bueq"
                android:layout_width="30pt"
                android:layout_height="42pt"
                android:layout_margin="0.69pt"
                android:layout_weight="1"
                android:background="@color/purple_700"
                android:onClick="equalEvent"
                android:text="=" />

        </TableRow>
    </TableLayout>
</LinearLayout>
